{
  "manifest_version": 3,
  "name": "Tasksboard - Local Google Tasks",
  "version": "1.0.0",
  "description": "本地版 Google Tasks 任务管理插件，快速高效的当日任务管理工具",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Tasksboard"
  },
  "background": {
    "service_worker": "background.js"
  }
}
